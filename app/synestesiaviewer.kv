BoxLayoutApp: #this widget here will run




<BoxLayoutApp>:
    orientation: "vertical"
    spacing: "20dp"
    Label:
        text: "Artursson: Synestesia Viewer"
        font_size: "50dp"
        font_name: "fonts/quicksand/Quicksand-Regular.otf"
        size_hint: 0.25, 1
        pos_hint: { "center_x" : 0.5}
    Label:
        text: root.text_input_str
        font_size: "150dp"
        font_name: "fonts/quicksand/Quicksand-Bold.otf"
        size_hint: 0.75, 1
        pos_hint: { "center_x" : 0.5}
        color: 0.5, 0.5, 0.75, 1
    TextInput:
        id: my_text_input
        text: "Enter text here"
        font_size: "30dp"
        font_name: "fonts/quicksand/Quicksand-Italic.otf"
        size_hint: 0.50, 0.50
        pos_hint: { "center_x" : 0.5}
        multiline: False
        on_text_validate: root.on_text_validate(self)
