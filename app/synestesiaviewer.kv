<BoxLayoutExample>:
    orientation: "vertical"
    BoxLayout
        spacing: "10dp"
        Button:
            text: "A1"
        Button:
            text: "A2"
        Button:
            text: "A3"
    Button:
        text: "B"
        size_hint: None, None #set size manually instead, specify size afterwards
        size: "40dp", "40dp"
        # OR
        #width: "40dp"
        #height: "40dp"
    Button:
        text: "C"
        size_hint: 0.5, None
        height: "50dp"
        # x, center_x, right
        # y, center_y, top
        pos_hint: { "x": 0.75} # dictionary with above entries
    Button:
        text: "D"
        size_hint: 0.5, None
        height: "50dp"
        pos_hint: { "center_x": 0.5}


<MainWidget>
# using no layout does not adjust object positions if screen size changes
    Button:
        text: "Hello"
        #size: 400 , 100 #different devices have different pixel densities. Use dp instead
        size: "100dp" , "80dp"
        pos: "100dp" , "200dp"
        color: 1, 0, 0, 1 # [0-1] red, green, blue, alpha (transparency)
    Label:
        text: "Hello2"
        size: "100dp" , "80dp"
        pos: "200dp" , "300dp"
        color: 1, 0, 0, 1